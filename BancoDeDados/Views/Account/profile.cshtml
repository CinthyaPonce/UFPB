@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model BancoDeDados.Models.Relation

<!DOCTYPE html>

<html>
    <head>

    </head>
    <body>
        @if(Model.Status == "4")
        {
            <h1>Este Usuário Não Existe</h1>
        }
        else if(Model.Status == null)
        {
            <a asp-action="SendFriend" asp-controller="Account" asp-route-userID="@Model.UserID">Enviar Amizade</a>
            <a>Bloquear Usuário</a><br><br>
        }
        else if(Model.Status == "1")
        {
            <a asp-action="CancelFriendRequest" asp-controller="Account" asp-route-userID="@Model.UserID">Cancelar Pedido de Amizade</a>
            <a>Bloquear Usuário</a><br><br>
        }
        else if(Model.Status == "2")
        {
            <a asp-controller="Account" asp-action="AcceptFriendRequest" asp-route-userID="@Model.UserID">Aceitar Pedido de Amizade</a>
            <a>Bloquear Usuário</a><br><br>
        }
        else if(Model.Status == "3")
        {
            <a asp-controller="Account" asp-action="UndoFriend" asp-route-userID="@Model.UserID">Desfazer Amizade</a>
            <a>Bloquear Usuário</a><br><br>
        }
            <img src='@Url.Content(@Model.ImagePath)'><br>
            
            <h1>
                    @Model.UserName
            </h1>
            
            @Model.City 
            <br>

            <a>Amigos</a>
            <a>Amigos em Comum</a>
        
    </body>
</html>
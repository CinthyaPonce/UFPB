@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using System.Collections.Generic;
@model List<Dictionary<string,string>>
<!DOCTYPE html>

<html>
    <head>

    </head>
    <body>
        <form asp-action="SearchUser">
            <input name="name" placeholder="Nome"><br>
            <input type="submit" value="Buscar"><br>
        </form>
        <div>
            <p><a asp-controller="Account" asp-action="Index">Voltar para o Incio</a></p>
            @if(Model != null)
            {
                @foreach(var item in Model)
                {
                    if(item["Status"] != "4" && item["Status"] != "6" )
                    {
                    <div>
                            <img src='@Url.Content(@item["ImagePath"])' style="width:30px; height:30px;">
                            
                            <a type="hidden" asp-controller="Account" asp-action="Profile" asp-route-id='@item["UserID"]'>
                                @item["Nome"]
                            </a>

                            @item["Cidade"]
                        </div><br>
                    }
                }
            }
        </div>
    </body>
</html>